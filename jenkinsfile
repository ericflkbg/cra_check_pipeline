pipeline {
    agent any  // Läuft auf einem beliebigen verfügbaren Agenten

    environment {
        IMAGE_NAME = "openplc"
        IMAGE_TAG = "latest"
    }

    stages {
        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/ericflkbg/OpenPLC_v3.git'
                script {
                    sh 'ls -la'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    sh "docker build -t ${IMAGE_NAME}:${IMAGE_TAG} ."
                }
            }
        } // Schließende Klammer für den 'Build Docker Image' stage
    }

    post {
        always {
            echo "Pipeline abgeschlossen!"
        }
        failure {
            echo "Pipeline fehlgeschlagen!"
        }
    }
}